<div class="admin-panel align-right">
    <%= add_link_to(new_admin_page_path) %>&nbsp;<%= destroy_selected_link_to %>
</div>
<% form_tag '/admin/pages/destroy/', :name => 'table', :method => :post do %>
<table>
	<thead>
		<th><%= check_box_tag :select_all %></th>
		<th>Название</th>
		<th>Ссылка</th>
		<th>Состояние</th>
		<th>Создано</th>
		<th>Изменено</th>
		<th></th>
		<th></th>
	</thead>
	<tbody>
		<% @pages.each do |page| %>
		<tr class="<%= cycle('even', 'odd') %>">
			<td><%= check_box_tag "ids_#{page.id}", page.id, false, :name => 'ids[]' %></td>
			<td><%= link_to page.title, page_url(:url => page.url), :target => '_blank' %></td>
			<td><%= page.url %></td>
			<td><%= status_image_tag(page.status_id) %></td>
			<td><%= page.created_at.strftime("%d.%M.%Y") %></td>
			<td><%= page.updated_at.strftime("%d.%M.%Y") %></td>
			<td><%= edit_image_link_to edit_admin_page_path(page) %></td>
			<td><%= destroy_image_link_to page %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<% end %>

