<div class="admin-panel align-right">
    <%= add_link_to(new_admin_role_path) %>&nbsp;<%= destroy_selected_link_to %>
</div>
<% form_tag '/admin/roles/destroy/', :name => 'table', :method => :post do %>
<table>
	<thead>
		<th><%= check_box_tag :select_all %></th>
		<th>Название</th>
		<th>Состояние</th>
		<th>Создано</th>
		<th>Изменено</th>
		<th></th>
		<th></th>
	</thead>
	<tbody>
		<% @roles.each do |role| %>
		<tr class="<%= cycle('even', 'odd') %>">
			<td><%= check_box_tag "ids_#{role.id}", role.id, false, :name => 'ids[]' %></td>
			<td><%= link_to role.title, edit_admin_role_path(role), :target => '_blank' %></td>
			<td><%= status_image_tag(role.status_id) %></td>
			<td><%= role.created_at.strftime("%d.%M.%Y") %></td>
			<td><%= role.updated_at.strftime("%d.%M.%Y") %></td>
			<td><%= edit_image_link_to edit_admin_role_path(role) %></td>
			<td><%= destroy_image_link_to role %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<% end %>

