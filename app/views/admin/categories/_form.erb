<% form_for [:admin, @category] do |form| %>
	<%= form.error_messages %>
    <ol>
        <li>
            <%= form.label :title %>
            <%= form.text_field :title %>
        </li>
        <li>
        	<%= form.label :keywords %>
            <%= form.text_area :keywords, :rows => 3 %>
        </li>
        <li>
        	<%= form.label :description %>
            <%= form.text_area :description, :rows => 5 %>
        </li>
        <li>
        	<%= form.label :status_id %>
            <%= form.status_select_field :status_id %>
        </li>
        <li>
            <%= form.submit 'Сохранить' %>
        </li>
	</ol>
<% end %>